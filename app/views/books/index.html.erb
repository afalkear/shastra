<h1>Listing books</h1>

<table>
  <tr>
    <th>Isbn-10</th>
    <th>Isbn-13</th>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Group</th>
    <th>Image url</th>
    <th>Price</th>
    <th>Used</th>
    <th>Condition</th>
    <th>Country</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%=h book.isbn %></td>
    <td><%=h book.isbn13 %></td>
    <td><%=h book.title %></td>
    <td><%=h book.description %></td>
    <td><%=h book.author %></td>
    <td><%=h book.publisher %></td>
    <td><%=h book.group %></td>
    <td><%=h book.image_url %></td>
    <td><%=h book.price %></td>
    <td><%=h book.used %></td>
    <td><%=h book.condition %></td>
    <td><%=h book.country %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New book', new_book_path %>